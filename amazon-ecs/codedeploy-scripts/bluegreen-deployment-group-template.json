{
  "applicationName": "Bluegreen",
  "autoRollbackConfiguration": {
    "enabled": true,
    "events": ["DEPLOYMENT_FAILURE"]
  },
  "blueGreenDeploymentConfiguration": {
    "deploymentReadyOption": {
      "actionOnTimeout": "CONTINUE_DEPLOYMENT",
      "waitTimeInMinutes": 0
    },
    "terminateBlueInstancesOnDeploymentSuccess": {
      "action": "TERMINATE",
      "terminationWaitTimeInMinutes": 5
    }
  },
  "deploymentGroupName": "Bluegreen",
  "deploymentStyle": {
    "deploymentOption": "WITH_TRAFFIC_CONTROL",
    "deploymentType": "BLUE_GREEN"
  },
  "loadBalancerInfo": {
    "targetGroupPairInfoList": [
      {
        "targetGroups": [
          {
            "name": "BluegreenTG1"
          },
          {
            "name": "BluegreenTG2"
          }
        ],
        "prodTrafficRoute": {
          "listenerArns": [
            "arn:aws:elasticloadbalancing:region:${ACCOUNT_ID}:listener/app/Bluegreen/89b68c3d05b5e533/c4a2eb686d17f32b"
          ]
        }
      }
    ]
  },
  "serviceRoleArn": "arn:aws:iam::${ACCOUNT_ID}:role/ecsCodeDeployRole",
  "ecsServices": [
    {
      "serviceName": "Bluegreen",
      "clusterName": "BluegreenCluster"
    }
  ]
}
